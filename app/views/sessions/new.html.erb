<h1>Log In</h1>
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag(:email, params[:email], {class: "form-control" }) %>
    </div>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag(:password, nil, {class: "form-control" }) %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
