<h1>Log In</h1>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="form-group">
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag(:email, params[:email], {class: "form-control" }) %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag(:password, nil, {class: "form-control" }) %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>
