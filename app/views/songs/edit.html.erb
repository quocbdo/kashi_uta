<h1>Edit Romaji Song Lyrics</h1>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
      <%= form_for @song do |f| %>  
        <div class="form-group">  
          <%= f.label :title %> 
          <%= f.text_field :title, {class: "form-control"} %>
        </div>
        <div class="form-group"> 
          <%= f.label :artist %>
          <%= f.text_field :artist, {class: "form-control"} %>
        </div>
        <div class="form-group"> 
          <%= f.label :genre %>
          <%= f.text_field :genre, {class: "form-control"} %>
        </div>
        <div>
          <%= f.label :lyrics %>
          <%= f.text_area :lyrics, rows: 3, class: "form-control", placeholder: "Please format lyrics with line breaks" %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit Edit", class: "btn btn-success" %>
        </div>
    <% end %>
</body>
</html>